{
  "compilerOptions": {
    "target": "ESNext",//узнать разницу с ES2020
    "noImplicitAny": true, //+
    "strictNullChecks": true,
    "importsNotUsedAsValues": "error", //не позволяет импортировать тип как value
    "allowJs": false,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@features/*": ["features/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": [ "shared/*"],
    },
  },
  "include": ["src", "typings"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
